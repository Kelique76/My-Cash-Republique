<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgandroid5"
    android:layout_height="match_parent"
    tools:context="com.kelique.firewithfirebaseapp.TambahAktifitas">

    <EditText
        android:id="@+id/textView2"
        android:layout_width="292dp"
        android:layout_height="47dp"
        android:hint="Nama lengkap"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="294dp"
        android:layout_height="47dp"
        android:layout_marginTop="5dp"
        android:hint="Alamat Lengkap"
        android:layout_below="@+id/textView2"
        tools:layout_editor_absoluteY="66dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:id="@+id/textView4"
        android:layout_width="294dp"
        android:layout_height="47dp"
        android:hint="No. e-KTP"
        android:inputType="number"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:id="@+id/textView5"
        android:layout_width="294dp"
        android:layout_height="47dp"
        android:hint="No. Telepon Seluler"
        android:inputType="number"
        android:layout_below="@+id/textView4"
        tools:layout_editor_absoluteY="166dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/textView6"
        android:layout_width="294dp"
        android:layout_height="47dp"
        android:hint="Permodalan"
        android:inputType="number"
        tools:layout_editor_absoluteY="166dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="54dp" />
    <EditText
        android:id="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="47dp"
        android:hint="Bagi Hasil"
        android:inputType="number"
        tools:layout_editor_absoluteY="166dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="90dp"
        android:layout_height="47dp"
        android:hint="Periode"
        android:inputType="number"
        android:layout_above="@+id/button2"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim"
        android:background="@drawable/wijetkuning"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
